@model IEnumerable<AllUsersVM>

<h2>Users</h2>

<div class="mb-3">
    <a asp-action="Create" class="btn btn-primary">Create User</a>
    <a asp-controller="Dashboard" asp-action="AdminDashboard" class="btn btn-secondary">Back</a>
</div>

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>UserName</th>
            <th>Role</th>
            <th style="width:150px;">Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td>@user.UserName</td>
                <td>@user.Role</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@user.Id" class="btn btn-sm btn-warning">Edit</a>
                    <a asp-action="Delete" asp-route-id="@user.Id" class="btn btn-sm btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
