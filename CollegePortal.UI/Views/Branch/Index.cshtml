@model IEnumerable<BranchCreateVM>

<h2>Branches</h2>

<div class="mb-3">
    <a asp-action="Create" class="btn btn-primary">Create New Branch</a>
    <a asp-controller="Dashboard" asp-action="AdminDashboard" class="btn btn-secondary">Back</a>
</div>

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>ID</th>
            <th>Name</th>
            <th style="width:150px;">Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var branch in Model)
        {
            <tr>
                <td>@branch.BranchId</td>
                <td>@branch.BranchName</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@branch.BranchId" class="btn btn-sm btn-warning">Edit</a>
                    <a asp-action="Delete" asp-route-id="@branch.BranchId" class="btn btn-sm btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
